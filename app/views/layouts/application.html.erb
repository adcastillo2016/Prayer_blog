<!DOCTYPE html>
<html>
  <head>
    <title>PrayerBlog</title>
    <%= csrf_meta_tags %>

<link href="https://fonts.googleapis.com/css?family=Lalezar|Open+Sans" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div id="sidebar">
  <h1> Praying for YOU</h1>
  <ul>
    <li><%= link_to "Home", root_path%></li>
    <li><%= link_to "New Prayer", new_prayer_path%></li>

  </ul>

</div>
  
  <div id="main-content">
  <% if current_page?(root_path) %>
         <div class="header">
  	<p>All Prayer</p>
  </div>
      <% else %>
      <div class="header">
        <p><%= link_to "Back to All Posts", root_path %><p>
        </div>
      <% end %>
 
  	<div class="post_wrapper" >
    <%= yield %>
    </div>
  </div>
  </body>
</html>
